<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/loanOfInterestLoanName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loan Name"
                    style="@style/TextAppearance.AppCompat.Title">

                </TextView>

                <TextView
                    android:id="@+id/loanOfInterestInstitution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Institution"
                    style="@style/TextAppearance.AppCompat.Medium">

                </TextView>

            </LinearLayout>

            <Button
                android:id="@+id/loanOfInterestShareButton"

                app:icon="@drawable/ic_outline_share_24"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="@color/white"
                android:layout_alignParentRight="true"
                />



        </RelativeLayout>







    </LinearLayout>




    <ImageView
        android:id="@+id/loanOfInterestPhoto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/firstglobal">

    </ImageView>

    <TextView
        android:id="@+id/loanOfInterestDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will uncover many web sites still in their infancy. ">

    </TextView>

    <View android:background="@color/gray"
        android:layout_width = "match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp">

    </View>



</LinearLayout>