<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoanDetails"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LoanDetails"
        android:textSize="50sp"
        android:gravity="center">

    </TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/institutionLogoLoanDetails"
        android:src="@drawable/scotiabank"
        >

    </ImageView>


    <TextView
        android:id="@+id/institutionNameLoanDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Scotiabank"
        android:gravity="center">

    </TextView>

    <TextView
        android:id="@+id/institutionEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Email address">

    </TextView>

    <TextView
        android:id="@+id/institutionPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Phone">

    </TextView>

</LinearLayout>