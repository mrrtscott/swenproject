<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#C6C6C6"
    android:orientation="vertical"
    android:showDividers="end"
    app:barrierMargin="@dimen/cardview_compat_inset_shadow">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageInstitutionItemView"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/sagicormg">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/loanTitleItemView"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Loan 1"
                            android:textSize="17sp">

                        </TextView>

                        <TextView
                            android:id="@+id/institutionItemView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Institution"
                            android:textAlignment="textEnd">

                        </TextView>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/descriptionItemView"
                        android:layout_width="220dp"
                        android:layout_height="105dp"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:maxLines="6"
                        android:paddingEnd="20dp"
                        android:text="This is an example of how the the loan description will work. In Matthew 13, the disciples asked Jesus why He spoke to the crowds in parables. He answered, It has been given to you to know the mysteries of the kingdom of heaven, but to them it has not been given. ">

                    </TextView>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/gray">

                    </View>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxLoanList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Compare">

                </CheckBox>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>