<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageInstitutionItemView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/sagicormg">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/loanTitleItemView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:text="Loan 1">

                </TextView>

                <TextView
                    android:id="@+id/institutionItemView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Institution"
                    android:textAlignment="textEnd">

                </TextView>

            </LinearLayout>



            <TextView
                android:id="@+id/descriptionItemView"
                android:layout_marginStart="10dp"
                android:layout_width="220dp"
                android:layout_height="105dp"
                android:ellipsize="end"
                android:maxLines="6"
                android:paddingEnd="20dp"
                android:text="This is an example of how the the loan description will work. In Matthew 13, the disciples asked Jesus why He spoke to the crowds in parables. He answered, It has been given to you to know the mysteries of the kingdom of heaven, but to them it has not been given. ">

            </TextView>

            <View android:background="@color/gray"
                android:layout_width = "match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="1dp">

            </View>

        </LinearLayout>







    </LinearLayout>






</LinearLayout>