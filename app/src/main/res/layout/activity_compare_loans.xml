<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompareLoans"
    android:id="@+id/loanTable"
    android:orientation="horizontal">






    <TableLayout

        android:layout_marginTop="@dimen/f40"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="3">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/loanOneImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/loanTwoImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>



        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanOneLoanName"
                android:text="Loan 1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanTwoLoanName"
                android:text="Loan 2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>



        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/light_grey">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Institution"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanOneInstitutionName"
                android:text="Loan 1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanTwoInstitutionName"
                android:text="Loan 2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Amount"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanOneLoanAmount"
                android:text="Loan 1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanTwoLoanAmount"
                android:text="Loan 2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/light_grey">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interest Rate"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanOneInterestRate"
                android:text="Loan 1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanTwoInterestRate"
                android:text="Loan 2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms of Repayment"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanOneTermsOfRepayment"
                android:text="Loan 1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanTwoTermsOfRepayment"
                android:text="Loan 2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/light_grey">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Percentage Financing"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanOnePercentFinancing"
                android:text="Loan 1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanTwoPercentFinancing"
                android:text="Loan 2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum Credit Score"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanOneMinimumCreditScore"
                android:text="Loan 1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/loanTwoMinimumCreditScore"
                android:text="Loan 2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Hub Pick"
                android:layout_gravity="center"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/loanOnePick"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/ic_greentick_foreground"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/loanTwoPick"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/ic_greentick_foreground"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"/>

        </TableRow>

    </TableLayout>



</LinearLayout>