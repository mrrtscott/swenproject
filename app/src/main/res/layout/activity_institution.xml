<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstitutionActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Header -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/startActivityLoanString"
                android:fontFamily="@font/menloregularfont"
                android:textSize="@dimen/f40"
                android:textFontWeight="800"
                android:layout_marginLeft="20dp"
                android:textColor="@color/app_blue">
            </TextView>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/menloregularfont"
                android:textFontWeight="400"
                android:text="HUB"
                android:textSize="40sp"
                android:textColor="@color/app_blue">
            </TextView>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/institutionInstitutionActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Institution"
        android:fontFamily="@font/avenirnextbold"
        android:textSize="30sp"
        android:textColor="@color/black">

    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageInstitutionActivity"
            android:layout_marginLeft="30dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/scotiabank">

        </ImageView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingRight="30dp">

            <Button
                android:id="@+id/phoneInstitutionActivity"
                app:icon="@drawable/ic_outline_local_phone_24"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="@color/white"
                android:layout_alignParentRight="true"
                />

            <Button
                android:id="@+id/emailInstitutionActivity"
                app:icon="@drawable/ic_outline_email_24"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="@color/white"
                android:layout_alignParentRight="true"
                />
            <Button
                android:id="@+id/websiteInstitutionActivity"
                app:icon="@drawable/ic_baseline_language_24"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="@color/white"
                android:layout_alignParentRight="true"
                />

        </LinearLayout>

    </RelativeLayout>



    <TextView
        android:id="@+id/sloganInstitutionActivity"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It is a long established fact that"
        android:textStyle="italic"
        android:textColor="#2699FB"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:id="@+id/aboutInstitutionActivity"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will uncover many web sites still in their infancy. Various versions have evolved over the years, sometimes by accident, sometimes on purpose (injected humour and the like).">

    </TextView>



</LinearLayout>